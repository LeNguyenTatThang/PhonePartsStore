@{
    var fullName = Context.Session.GetString("FullName") ?? "Đăng nhập";
    var isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("FullName"));
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - PhoneParts</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <div class="container-fluid px-5 py-4 d-none d-lg-block">
        <div class="row gx-0 align-items-center text-center">
            <!-- Logo -->
            <div class="col-md-4 col-lg-3 text-center text-lg-start">
                <div class="d-inline-flex align-items-center">
                    <a href="/" class="navbar-brand p-0">
                        <h1 class="display-5 text-primary m-0">
                            <i class="fas fa-mobile-alt text-secondary me-2"></i>PhoneParts
                        </h1>
                        <!-- <img src="img/logo.png" alt="Logo"> -->
                    </a>
                </div>
            </div>

            <!-- Search bar -->
            <div class="col-md-4 col-lg-6 text-center">
                <div class="position-relative ps-4">
                    <div class="d-flex border rounded-pill">
                        <input class="form-control border-0 rounded-pill w-100 py-3" type="text"
                            placeholder="Tìm kiếm linh kiện, phụ kiện bạn cần...">
                        <select class="form-select text-dark border-0 border-start rounded-0 p-3" style="width: 200px;">
                            <option value="All Category">Tất cả danh mục</option>
                            <option value="Cables">Cáp & Sạc</option>
                            <option value="Cases">Ốp lưng & Bao da</option>
                            <option value="Audio">Tai nghe & Loa</option>
                            <option value="Powerbanks">Pin dự phòng</option>
                            <option value="Screen">Miếng dán & Màn hình</option>
                        </select>
                        <button type="button" class="btn btn-primary rounded-pill py-3 px-5" style="border: 0;">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Icons -->
            <div class="col-md-4 col-lg-3 text-center text-lg-end">
                <div class="d-inline-flex align-items-center">
                    <a href="#" class="text-muted d-flex align-items-center justify-content-center me-3">
                        <span class="rounded-circle btn-md-square border"><i class="fas fa-random"></i></span>
                    </a>
                    <a href="#" class="text-muted d-flex align-items-center justify-content-center me-3">
                        <span class="rounded-circle btn-md-square border"><i class="fas fa-heart"></i></span>
                    </a>
                    <a asp-controller="Cart" asp-action="Index" class="text-muted d-flex align-items-center justify-content-center me-3">
                        <span class="rounded-circle btn-md-square border"><i class="fas fa-shopping-cart"></i></span>
                    </a>
                   <a 
                        asp-controller="@((isLoggedIn) ? "Home" : "SignIn")" 
                        asp-action="@((isLoggedIn) ? "Profile" : "Index")" 
                        class="d-inline-flex align-items-center text-muted position-relative" 
                        data-bs-toggle="tooltip" data-bs-placement="bottom" title="@fullName">
                        
                        <span class="rounded-circle border bg-light d-flex justify-content-center align-items-center" 
                            style="width:36px; height:36px;">
                            <i class="fas fa-user"></i>
                        </span>
                    </a>

                    @if (isLoggedIn)
                    {
                        <a asp-controller="SignIn" asp-action="Logout" class="ms-2 btn btn-sm btn-outline-danger" style="padding:0.25rem 0.5rem;">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Topbar End -->

    <!-- Navbar & Hero Start -->
    <div class="container-fluid nav-bar p-0">
        <div class="row gx-0 bg-primary px-5 align-items-center">
            <!-- Danh mục -->
            <div class="col-lg-3 d-none d-lg-block">
                <nav class="navbar navbar-light position-relative" style="width: 250px;">
                    <button class="navbar-toggler border-0 fs-4 w-100 px-0 text-start" type="button"
                        data-bs-toggle="collapse" data-bs-target="#allCat">
                        <h4 class="m-0"><i class="fa fa-bars me-2"></i>Tất cả danh mục</h4>
                    </button>
                    <div class="collapse navbar-collapse rounded-bottom" id="allCat">
                        <div class="navbar-nav ms-auto py-0">
                            <ul class="list-unstyled categories-bars">
                                <li>
                                    <div class="categories-bars-item">
                                        <a href="#">Cáp & Sạc</a>
                                        <span>(8)</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="categories-bars-item">
                                        <a href="#">Ốp lưng & Bao da</a>
                                        <span>(12)</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="categories-bars-item">
                                        <a href="#">Tai nghe & Loa</a>
                                        <span>(5)</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="categories-bars-item">
                                        <a href="#">Pin dự phòng</a>
                                        <span>(4)</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="categories-bars-item">
                                        <a href="#">Miếng dán màn hình</a>
                                        <span>(6)</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="categories-bars-item">
                                        <a href="#">Phụ kiện khác</a>
                                        <span>(3)</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
        </div>

        <div class="col-12 col-lg-9">
            <nav class="navbar navbar-expand-lg navbar-light bg-primary">
                <a href="/" class="navbar-brand d-block d-lg-none">
                    <h1 class="display-5 text-secondary m-0">
                        <i class="fas fa-mobile-alt text-white me-2"></i>PhoneParts
                    </h1>
                </a>
                <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars fa-1x"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0">
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Trang chủ</a>
                        <a asp-controller="Shop" asp-action="Index" class="nav-item nav-link">Cửa hàng</a>
                        <a asp-controller="Single" asp-action="Index" class="nav-item nav-link">Chi tiết sản phẩm</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Trang khác</a>
                            <div class="dropdown-menu m-0">
                                <a asp-controller="BestSeller" asp-action="Index" class="dropdown-item">Sản phẩm bán chạy</a>
                                <a asp-controller="Cart" asp-action="Index" class="dropdown-item">Giỏ hàng</a>
                                <a asp-controller="CheckOut" asp-action="Index" class="dropdown-item">Thanh toán</a>
                                <a asp-controller="Error" asp-action="Index" class="dropdown-item">Trang lỗi 404</a>
                            </div>
                        </div>
                        <a asp-controller="Contact" asp-action="Index" class="nav-item nav-link me-2">Liên hệ</a>

                        <!-- Dropdown danh mục trên mobile -->
                        <div class="nav-item dropdown d-block d-lg-none mb-3">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Tất cả danh mục</a>
                            <div class="dropdown-menu m-0">
                                <ul class="list-unstyled categories-bars">
                                    <li>
                                        <div class="categories-bars-item">
                                            <a href="#">Cáp & Sạc</a>
                                            <span>(8)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="categories-bars-item">
                                            <a href="#">Ốp lưng & Bao da</a>
                                            <span>(12)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="categories-bars-item">
                                            <a href="#">Tai nghe & Loa</a>
                                            <span>(5)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="categories-bars-item">
                                            <a href="#">Pin dự phòng</a>
                                            <span>(4)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="categories-bars-item">
                                            <a href="#">Miếng dán màn hình</a>
                                            <span>(6)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="categories-bars-item">
                                            <a href="#">Phụ kiện khác</a>
                                            <span>(3)</span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                        <!-- Hotline -->
                        <a href="tel:01234567890"
                            class="btn btn-secondary rounded-pill py-2 px-4 px-lg-3 mb-3 mb-md-3 mb-lg-0">
                            <i class="fa fa-phone-alt me-2"></i> 0123 456 789
                        </a>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    <!-- Navbar & Hero End -->


    @RenderBody()


    <!-- Footer Start -->
    <div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
        <div class="container py-5">
            <!-- Thông tin liên hệ -->
            <div class="row g-4 rounded mb-5" style="background: rgba(255, 255, 255, .03);">
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="rounded p-4">
                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mb-4"
                            style="width: 70px; height: 70px;">
                            <i class="fas fa-map-marker-alt fa-2x text-primary"></i>
                        </div>
                        <div>
                            <h4 class="text-white">Địa chỉ</h4>
                            <p class="mb-2">123 Lê Lợi, Quận 1, TP. Hồ Chí Minh</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="rounded p-4">
                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mb-4"
                            style="width: 70px; height: 70px;">
                            <i class="fas fa-envelope fa-2x text-primary"></i>
                        </div>
                        <div>
                            <h4 class="text-white">Email</h4>
                            <p class="mb-2">support@phoneparts.vn</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="rounded p-4">
                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mb-4"
                            style="width: 70px; height: 70px;">
                            <i class="fa fa-phone-alt fa-2x text-primary"></i>
                        </div>
                        <div>
                            <h4 class="text-white">Hotline</h4>
                            <p class="mb-2">(+84) 912 345 678</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="rounded p-4">
                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mb-4"
                            style="width: 70px; height: 70px;">
                            <i class="fab fa-chrome fa-2x text-primary"></i>
                        </div>
                        <div>
                            <h4 class="text-white">Website</h4>
                            <p class="mb-2">www.phoneparts.vn</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Nội dung chính footer -->
            <div class="row g-5">
                <!-- Newsletter -->
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
                        <h4 class="text-primary mb-4">Đăng ký nhận tin</h4>
                        <p class="mb-3">Nhận thông báo khuyến mãi và sản phẩm mới nhất từ PhoneParts.</p>
                        <div class="position-relative mx-auto rounded-pill">
                            <input class="form-control rounded-pill w-100 py-3 ps-4 pe-5" type="text"
                                placeholder="Nhập email của bạn">
                            <button type="button"
                                class="btn btn-primary rounded-pill position-absolute top-0 end-0 py-2 mt-2 me-2">
                                Đăng ký
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Dịch vụ khách hàng -->
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
                        <h4 class="text-primary mb-4">Hỗ trợ khách hàng</h4>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Liên hệ</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Chính sách đổi trả</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Lịch sử đơn hàng</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Hướng dẫn mua hàng</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Tài khoản của tôi</a>
                    </div>
                </div>

                <!-- Thông tin -->
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
                        <h4 class="text-primary mb-4">Thông tin</h4>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Giới thiệu</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Chính sách giao hàng</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Bảo mật thông tin</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Điều khoản sử dụng</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Bảo hành & đổi trả</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Câu hỏi thường gặp</a>
                    </div>
                </div>

                <!-- Liên kết khác -->
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
                        <h4 class="text-primary mb-4">Liên kết khác</h4>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Thương hiệu</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Mã giảm giá</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Đối tác liên kết</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Sản phẩm yêu thích</a>
                        <a href="#"><i class="fas fa-angle-right me-2"></i> Theo dõi đơn hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->


    <!-- Copyright Start -->
    <div class="container-fluid copyright py-4">
        <div class="container">
            <div class="row g-4 align-items-center">
                <div class="col-md-6 text-center text-md-start mb-md-0">
                    <span class="text-white">
                        <a href="#" class="border-bottom text-white">
                            <i class="fas fa-copyright text-light me-2"></i>PhoneParts.vn
                        </a>
                        - Tất cả quyền được bảo lưu.
                    </span>
                </div>
                <div class="col-md-6 text-center text-md-end text-white">
                    Thiết kế bởi <a class="border-bottom text-white" href="#">Dez.Dev Studio</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Copyright End -->



    <!-- Back to Top -->
    <a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>


    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
</body>

</html>

@model ResetPassword
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<!-- Header / Breadcrumb -->
<div class="container-fluid page-header py-5 bg-primary-subtle">
    <h1 class="text-center text-dark display-6 wow fadeInUp" data-wow-delay="0.1s">Đặt lại mật khẩu</h1>
    <ol class="breadcrumb justify-content-center mb-0 wow fadeInUp" data-wow-delay="0.3s">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Quên mật khẩu</a></li>
        <li class="breadcrumb-item active text-dark">Đặt lại mật khẩu</li>
    </ol>
</div>

<!-- Reset Password Form -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded shadow-sm col-lg-6 mx-auto wow fadeInUp" data-wow-delay="0.2s">
            <div class="text-center mb-5">
                <h4 class="text-primary border-bottom border-primary border-2 d-inline-block pb-2">
                    Tạo mật khẩu mới
                </h4>
                <p class="text-muted mt-3">
                    Nhập mật khẩu mới cho tài khoản của bạn bên dưới.
                </p>
            </div>

            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Email" value="@ViewBag.Email" />
                <input type="hidden" asp-for="Token" value="@ViewBag.OTP" />

                <div class="row g-4">
                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Mật khẩu mới" required />
                            <label for="password">Mật khẩu mới</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Xác nhận mật khẩu" required />
                            <label for="confirmPassword">Xác nhận mật khẩu</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary w-100 py-3">
                            Xác nhận đặt lại mật khẩu
                        </button>
                    </div>
                </div>
            </form>

            <div class="text-center mt-4">
                <a href="/" class="text-decoration-none text-primary">
                    <i class="fa fa-arrow-left me-2"></i>Quay về trang chủ
                </a>
            </div>
        </div>
    </div>
</div>
